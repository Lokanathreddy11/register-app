pipeline {
  agent { label 'Jenkins-Agent' }
  tools {
    jdk 'java17'
    maven 'maven3'
  }
  stages{
      stage("Cleanup Workspace"){
            steps {
            cleanWs()
            }
      }

      stage("Checkout from SCM"){
            stages {
                 git branch 'main', credentailsId: 'github', url: 'https://github.com/Lokanathreddy11/register-app.git'
            }
      }

      stages("Build Application"){
            steps {
                sh :mvn clean package"
            }
      }

      stages("Test Application"){
            steps {
                 sh :mvn test"
            }
      }
   }
}


